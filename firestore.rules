rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // -------------------------------------------------------------------------
    // SECURITY RULES
    // -------------------------------------------------------------------------
    // These rules allow any user who is logged in (Authentication) to read and 
    // write data. This fixes the "Permission Denied" errors.
    //
    // For a production app, you would restrict 'write' access to specific roles.
    // -------------------------------------------------------------------------
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}